<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/huc_layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efffffff"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/huc_txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#393d40"
        android:textSize="16dp" />

    <FrameLayout
        android:id="@+id/huc_layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/huc_txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#393d40"
            android:textSize="14dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.herosdk.widget.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/huc_btnLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            fancy:hu_fb_borderColor="#fc6475"
            fancy:hu_fb_borderWidth="1dp"
            fancy:hu_fb_defaultColor="#fc6475"
            fancy:hu_fb_focusColor="#d5354d"
            fancy:hu_fb_radius="25dp"
            fancy:hu_fb_textColor="#efffffff"
            fancy:hu_fb_textSize="16dp" />

        <com.herosdk.widget.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/huc_btnRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="24dp"
            fancy:hu_fb_borderColor="#fc6475"
            fancy:hu_fb_borderWidth="1dp"
            fancy:hu_fb_defaultColor="#fc6475"
            fancy:hu_fb_focusColor="#d5354d"
            fancy:hu_fb_radius="25dp"
            fancy:hu_fb_textColor="#efffffff"
            fancy:hu_fb_textSize="16dp" />
    </LinearLayout>

</LinearLayout>
