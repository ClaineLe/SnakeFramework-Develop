<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:id="@+id/hut_layoutToolBar"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent">

    <LinearLayout
        android:gravity="right|center_vertical"
        android:id="@+id/hut_layoutToolBarLeft"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <ImageView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="30dp"
            android:id="@+id/hut_imgTBack"
            android:scaleType="centerInside"
            android:src="@mipmap/hu_ic_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/hut_txtTTitle"
            android:textStyle="bold"
            android:textSize="20dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="#393d40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="right|center_vertical"
        android:id="@+id/hut_layoutToolBarRight"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <ImageView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="16dp"
            android:id="@+id/hut_imgTClose"
            android:scaleType="centerInside"
            android:src="@mipmap/hu_ic_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
