<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#00000000">
    <LinearLayout
            android:layout_gravity="right"
            android:visibility="visible"
            android:id="@+id/bloc_window_float_menu_right_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bloc_size_10_px"
            android:paddingTop="@dimen/bloc_size_10_px"
            android:background="@drawable/bloc_window_float_menu_root_bg">
        <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/bloc_window_float_menu_hide_layout_right"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/bloc_window_float_menu_delet_img_right"
                    android:layout_marginRight="@dimen/bloc_size_20_px"
                    android:layout_marginLeft="@dimen/bloc_size_16_px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bloc_window_float_del"/>
            <View android:layout_width="2dp"
                  android:layout_height="match_parent"
                  android:layout_marginRight="@dimen/bloc_size_20_px"
                  android:layout_marginTop="@dimen/bloc_size_16_px"
                  android:layout_marginBottom="@dimen/bloc_size_16_px"
                  android:background="#d8d8d8"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/bloc_window_float_menu_view_parent_right"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="match_parent"></LinearLayout>
        <ImageView
                android:layout_marginRight="@dimen/bloc_size_16_px"
                android:id="@+id/bloc_window_float_right_menu_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bloc_window_float_icondown"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/bloc_window_float_menu_left_root"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/bloc_size_10_px"
            android:paddingBottom="@dimen/bloc_size_10_px"
            android:background="@drawable/bloc_window_float_menu_root_bg">
        <ImageView
                android:layout_marginLeft="@dimen/bloc_size_16_px"
                android:id="@+id/bloc_window_float_left_menu_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bloc_window_float_icondown"/>
        <LinearLayout
                android:id="@+id/bloc_window_float_menu_view_parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/bloc_window_float_menu_hide_layout"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
            <View android:layout_width="2dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/bloc_size_20_px"
                  android:layout_marginTop="@dimen/bloc_size_16_px"
                  android:layout_marginBottom="@dimen/bloc_size_16_px"
                  android:background="#d8d8d8"/>
            <ImageView
                    android:id="@+id/bloc_window_float_menu_delet_img"
                    android:layout_marginLeft="@dimen/bloc_size_20_px"
                    android:layout_marginRight="@dimen/bloc_size_16_px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bloc_window_float_del"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>