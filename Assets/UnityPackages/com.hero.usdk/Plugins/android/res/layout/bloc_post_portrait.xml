<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <ImageView
                android:id="@+id/post_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bloc_dark_webtool_back_select"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="发帖"
                android:textColor="#4b525b"
                android:textSize="16sp"
                android:gravity="center"/>

        <TextView
                android:id="@+id/post_rotate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/post_potrait_icon"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                android:paddingRight="15dp"
                android:textColor="#8c9196"
                android:textSize="10sp"
                android:text="横屏"
                android:visibility="invisible"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#44000000"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
        <EditText
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLines="1"
                android:maxLength="30"
                android:hint="标题(选填，0-30字)"
                android:textColorHint="#8c9196"
                android:textSize="12sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/post_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="输入你想说的…"
                    android:textColorHint="#8c9196"
                    android:textSize="12sp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bloc_post_location_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:src="@drawable/post_location_icon"/>

                <TextView
                        android:id="@+id/post_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#68a2fd"
                        android:textSize="10sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="chengdu"/>

                <ImageView
                        android:id="@+id/post_location_del"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/post_location_del"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#44000000"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/post_emoji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:src="@drawable/post_select_emoji"/>

        <ImageView
                android:id="@+id/post_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/post_select_image"/>

        <ImageView
                android:id="@+id/post_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:src="@drawable/post_select_video"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical">

            <TextView
                    android:id="@+id/post_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bloc_white"
                    android:gravity="center"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bloc_comment_send_btn"
                    android:text="发送"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>