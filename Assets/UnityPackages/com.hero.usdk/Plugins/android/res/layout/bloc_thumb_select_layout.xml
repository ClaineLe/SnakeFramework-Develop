<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tc="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

        <TextView
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/bloc_dark_img_back_nor"
                android:id="@+id/txt_back"
                android:padding="3dp"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发帖"
                android:textColor="#FF4B525B"
                android:textSize="15sp"
                />

        <TextView
                android:id="@+id/txt_confirm"
                android:layout_marginRight="10dp"
                android:background="@drawable/bloc_comment_send_btn"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="确定"
                android:textColor="#fff"
                />

    </FrameLayout>

    <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <org.jar.bloc.widget.easyrecyclerview.EasyRecyclerView
                android:padding="3dp"
                android:background="#F5F7FA"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="5dp"
                android:numColumns="5"
                android:listSelector="@android:color/transparent"
                android:id="@+id/gridView_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:visibility="gone"
                android:background="#000000"
                android:id="@+id/layout_proccess"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <org.jar.bloc.widget.TasksCompletedView
                    android:id="@+id/tasks_view"
                    android:layout_width="115dip"
                    android:layout_height="115dip"
                    tc:radius="50dip"
                    tc:strokeWidth="5dip"
                    tc:circleColor="#000"
                    tc:ringColor="#448E05"/>

            <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:text="视频上传中..."
                    />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
