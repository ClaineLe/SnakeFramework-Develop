<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/root"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:background="#ffffff">

        <EditText
                android:id="@+id/usercenter_sdk_comment_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:imeOptions="flagNoExtractUi"
                android:maxLines="2"
                android:alpha="0.5"
                android:textSize="14sp"
                android:background="@drawable/bloc_comment_edit_bg"/>

        <TextView
                android:id="@+id/usercenter_sdk_comment_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bloc_comment_send_btn"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/bloc_usercenter_comment_send"/>
    </LinearLayout>

</FrameLayout>