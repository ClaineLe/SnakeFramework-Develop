<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Bloc_CircleImageView">
        <attr name="bloc_border_width" format="dimension" />
        <attr name="bloc_border_color" format="color" />
        <attr name="bloc_border_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Bloc_Bloc_FancyButton">
        <attr name="bloc_fb_defaultColor"
              format="color"/>
        <attr name="bloc_fb_text"
              format="string"/>

        <attr name="bloc_fb_textColor"
              format="color"/>
        <attr name="bloc_fb_iconColor"
              format="color"/>

        <attr name="bloc_fb_textFont"
              format="string"/>
        <attr name="bloc_fb_iconFont"
              format="string"/>

        <attr name="bloc_fb_textSize"
              format="dimension"/>
        <attr name="bloc_fb_iconResource"
              format="integer"/>
        <attr name="bloc_fb_fontIconResource"
              format="string"/>
        <attr name="bloc_fb_fontIconSize"
              format="dimension"/>
        <attr name="bloc_fb_iconPosition"
              format="enum">
            <enum name="left"
                  value="1"/>
            <enum name="right"
                  value="2"/>
            <enum name="top"
                  value="3"/>
            <enum name="bottom"
                  value="4"/>
        </attr>

        <attr name="bloc_fb_textPosition"
              format="enum">
            <enum name="left"
                  value="1"/>
            <enum name="right"
                  value="2"/>
            <enum name="top"
                  value="3"/>
            <enum name="bottom"
                  value="4"/>
        </attr>

        <attr name="bloc_fb_textGravity"
              format="enum">
            <enum name="top"
                  value="0x30"/>
            <enum name="bottom"
                  value="0x50"/>
            <enum name="left"
                  value="0x03"/>
            <enum name="right"
                  value="0x05"/>
            <enum name="center_vertical"
                  value="0x10"/>
            <enum name="fill_vertical"
                  value="0x70"/>
            <enum name="center_horizontal"
                  value="0x01"/>
            <enum name="fill_horizontal"
                  value="0x07"/>
            <enum name="center"
                  value="0x11"/>
            <enum name="fill"
                  value="0x77"/>
            <enum name="clip_vertical"
                  value="0x80"/>
            <enum name="clip_horizontal"
                  value="0x08"/>
            <enum name="start"
                  value="0x00800003"/>
            <enum name="end"
                  value="0x00800005"/>
        </attr>

        <attr name="bloc_fb_iconPaddingLeft"
              format="dimension"/>
        <attr name="bloc_fb_iconPaddingRight"
              format="dimension"/>
        <attr name="bloc_fb_iconPaddingTop"
              format="dimension"/>
        <attr name="bloc_fb_iconPaddingBottom"
              format="dimension"/>

        <attr name="bloc_fb_borderColor"
              format="color"/>
        <attr name="bloc_fb_borderWidth"
              format="dimension"/>
        <attr name="bloc_fb_focusColor"
              format="color"/>
        <attr name="bloc_fb_disabledColor"
              format="color"/>
        <attr name="bloc_fb_disabledTextColor"
              format="color"/>
        <attr name="bloc_fb_disabledBorderColor"
              format="color"/>
        <attr name="bloc_fb_radius"
              format="dimension"/>
        <attr name="bloc_fb_textAllCaps"
              format="boolean"/>

        <attr name="bloc_fb_ghost"
              format="boolean"/>
        <attr name="bloc_fb_useSystemFont"
              format="boolean"/>
    </declare-styleable>


    <declare-styleable name="Bloc_RoundView">
        <!-- 以下是重用attr的正确姿势,一切为了在布局中可以自动提示-->
        <!-- 圆角矩形背景色 -->
        <attr name="bloc_rv_backgroundColor"
              format="color"/>
        <!-- 圆角矩形背景色press -->
        <attr name="bloc_rv_backgroundPressColor"
              format="color"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="bloc_rv_cornerRadius"
              format="dimension"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="bloc_rv_strokeWidth"
              format="dimension"/>
        <!-- 圆角边框颜色-->
        <attr name="bloc_rv_strokeColor"
              format="color"/>
        <!-- 圆角边框颜色press -->
        <attr name="bloc_rv_strokePressColor"
              format="color"/>
        <!-- 文字颜色press-->
        <attr name="bloc_rv_textPressColor"
              format="color"/>
        <!-- 圆角弧度是高度一半-->
        <attr name="bloc_rv_isRadiusHalfHeight"
              format="boolean"/>
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="bloc_rv_isWidthHeightEqual"
              format="boolean"/>
        <!-- 圆角弧度,单位dp,TopLeft-->
        <attr name="bloc_rv_cornerRadius_TL"
              format="dimension"/>
        <!-- 圆角弧度,单位dp,TopRight-->
        <attr name="bloc_rv_cornerRadius_TR"
              format="dimension"/>
        <!-- 圆角弧度,单位dp,BottomLeft-->
        <attr name="bloc_rv_cornerRadius_BL"
              format="dimension"/>
        <!-- 圆角弧度,单位dp,BottomRight-->
        <attr name="bloc_rv_cornerRadius_BR"
              format="dimension"/>
    </declare-styleable>
    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius"
              format="dimension"/>
        <attr name="strokeWidth"
              format="dimension"/>
        <attr name="circleColor"
              format="color"/>
        <attr name="ringColor"
              format="color"/>
        <attr name="ringBgColor"
              format="color"/>
    </declare-styleable>
    <declare-styleable name="MagicTextView">
        <attr name="innerShadowColor" format="color"/>
        <attr name="innerShadowRadius" format="float"/>
        <attr name="innerShadowDx" format="float"/>
        <attr name="innerShadowDy" format="float"/>

        <attr name="outerShadowColor" format="color"/>
        <attr name="outerShadowRadius" format="float"/>
        <attr name="outerShadowDx" format="float"/>
        <attr name="outerShadowDy" format="float"/>

        <attr name="typeface" format="string" />

        <attr name="foreground" format="reference|color"/>
        <attr name="backGround" format="reference|color"/>

        <attr name="StrokeWidth" format="float" />
        <attr name="strokeMiter" format="float" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeJoinStyle">
            <enum name="miter" value="0" />
            <enum name="bevel" value="1" />
            <enum name="round" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="blocThumbDrawable" format="reference"/>
        <attr name="blocThumbColor" format="color|reference"/>
        <attr name="blocThumbMargin" format="dimension|reference"/>
        <attr name="blocThumbMarginTop" format="dimension|reference"/>
        <attr name="blocThumbMarginBottom" format="dimension|reference"/>
        <attr name="blocThumbMarginLeft" format="dimension|reference"/>
        <attr name="blocThumbMarginRight" format="dimension|reference"/>
        <attr name="blocThumbWidth" format="dimension|reference"/>
        <attr name="blocThumbHeight" format="dimension|reference"/>
        <attr name="blocThumbRadius" format="dimension|reference"/>
        <attr name="blocBackRadius" format="dimension|reference"/>
        <attr name="blocBackDrawable" format="reference"/>
        <attr name="blocBackColor" format="color|reference"/>
        <attr name="blocFadeBack" format="boolean"/>
        <attr name="blocBackMeasureRatio" format="float"/>
        <attr name="blocAnimationDuration" format="integer"/>
        <attr name="blocTintColor" format="color|reference"/>
        <attr name="blocTextOn" format="string"/>
        <attr name="blocTextOff" format="string"/>
        <attr name="blocTextMarginH" format="dimension"/>
        <attr name="blocAutoAdjustTextPosition" format="boolean"/>
    </declare-styleable>
</resources>
